---
import { Picture } from "astro:assets"

import Base from "@layouts/Base.astro"
---

<Base>
  <section class="relative bg-catskill-white py-12 md:py-16 lg:py-32">
    <div class="container md:max-lg:max-w-full">
      <div class="w-full text-center">
        <h1 class="text-5xl font-bold">Full-Service HR for Small Businesses</h1>
        <p class="mt-4">Empowering Organizations and Elevating HR Practices</p>
      </div><!-- /.w-full text-center -->
    </div><!-- /.container md:max-lg:max-w-full -->
  </section><!-- /.relative bg-catskill-white py-12 md:py-16 lg:py-32 -->

  <section class="mt-16 md:mt-24 lg:mt-32">
    <div class="container md:max-lg:max-w-full">
      <div class="relative mx-auto max-w-4xl text-center">
        <p class="w-full capitalize text-breaker-bay">.our services</p>
        <h2 class="w-full font-bold capitalize md:text-5xl md:leading-none">
          Optimize Your Business With The Right Talent, Right Skill & Right
          Tools
        </h2>
      </div><!-- /.relative -->

      <div class="mt-16 grid md:grid-cols-2 lg:grid-cols-4">
      </div><!-- /.mt-16 grid md:grid-cols-2 lg:grid-cols-4 -->
    </div><!-- /.container md:max-lg:max-w- -->
  </section><!-- /.mt-16 md:mt-24 lg:mt-32 -->
</Base>
